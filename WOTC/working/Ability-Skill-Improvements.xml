<!-- STANDARD ABILITY SCORE IMPROVEMENT -->
<element name="Strength" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB24_ASI_STRENGTH">
	<supports>Standard, Strength</supports>
	<description>
		<p>Your Strength increases by 1.</p>
	</description>
	<setters>
		<set name="allow duplicate">true</set>
	</setters>
	<rules>
		<stat name="Strength" value="1" />
	</rules>
</element>
