	<element name="Ability Score Improvement" type="Feat" source="Player’s Handbook Rev. 2024" id="ID_PHB24_FEAT_ABILITY_SCORE_IMPROVEMENT">
		<supports>Origin Feat</supports>
		<description>
			<p>Increase one ability score of your choice by 2 or two ability scores of your choice by 1. This feat can't increase an ability score above 20.</p>
			<p><strong>Repeatable.</strong> You can take this feat more than once.</p>
		</description>
		<sheet display="false" />
		<rules>
			<select type="Ability Score Improvement" name="Ability Score Increase" number="2" supports="ASI" />
		</rules>
	</element>
	

<!-- Ability score improvement -->
	<element name="Strength" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB_FEAT_ASI_STRENGTH">
		<supports>ASI</supports>
		<description>
			<p>Your Strength increases by 1.</p>
		</description>
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="strength" value="1" alt="Ability Score Increase" />
		</rules>
	</element>
	<element name="Dexterity" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB_FEAT_ASI_DEXTERITY">
		<supports>ASI</supports>
		<description>
			<p>Your Dexterity increases by 1.</p>
		</description>
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="dexterity" value="1" alt="Ability Score Increase" />
		</rules>
	</element>
