	<element name="Ability Score Improvement (any +2)" type="Feat" source="Player’s Handbook Rev. 2024" id="ID_PHB24_FEAT_ABILITY_SCORE_IMPROVEMENT_2">
		<supports>Origin Feat</supports>
		<description>
			<p>Increase one ability score of your choice by 2. This feat can't increase an ability score above 20.</p>
			<p><strong>Repeatable.</strong> You can take this feat more than once.</p>
		</description>
		<sheet display="false" />
		<rules>
			<select type="Ability Score Improvement" name="Ability Score Increase" supports="Ability score increase 2" />
		</rules>
	</element>
	<element name="Ability Score Improvement (any 2 +1)" type="Feat" source="Player’s Handbook Rev. 2024" id="ID_PHB24_FEAT_ABILITY_SCORE_IMPROVEMENT_1">
		<supports>Origin Feat</supports>
		<description>
			<p>Two ability scores of your choice by 1. This feat can't increase an ability score above 20.</p>
			<p><strong>Repeatable.</strong> You can take this feat more than once.</p>
		</description>
		<sheet display="false" />
		<rules>
			<select type="Ability Score Improvement" name="Ability Score Increase" value="2" supports="Ability score increase 1" />
		</rules>
	</element>

<!-- Ability score improvement -->
	<element name="Ability Score Increase (Strength)" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB_FEAT_ASI_STRENGTH_2">
		<supports>Ability score increase 2</supports>
		<description>
			<p>Your Strength increases by 2.</p>
		</description>
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="strength" value="2" alt="Ability Score Increase" />
		</rules>
	</element>
	<element name="Ability Score Increase (Strength)" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB_FEAT_ASI_STRENGTH_1">
		<supports>Ability score increase 1</supports>
		<description>
			<p>Your Strength increases by 1.</p>
		</description>
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="strength" value="1" alt="Ability Score Increase" />
		</rules>
	</element>
	<element name="Ability Score Increase (Dexterity)" type="Ability Score Improvement" source="Player’s Handbook Rev. 2024" id="ID_PHB_FEAT_ASI_DEXTERITY_1">
		<supports>Ability score increase 1</supports>
		<description>
			<p>Your Dexterity increases by 1.</p>
		</description>
		<setters>
			<set name="allow duplicate">true</set>
		</setters>
		<rules>
			<stat name="dexterity" value="1" alt="Ability Score Increase" />
		</rules>
	</element>
